extends ../main.pug
block content
  h2 Rent Car
  form(method='GET', action='/cars/all')
    input(type='search', name='search')
    input(type='submit', value='Search...')
  .container-cars
  form(method='POST', action=`/cars/rent/${car._id}`)
    div='Model:' + car.model
    img(src=car.image)
    p='Price Per Day: ' + car.pricePerDay
    | Days:
    select(name='days')
      option(value='1') 1
      option(value='2') 2
      option(value='3') 3
      option(value='4') 4
      option(value='5') 5
      option(value='6') 6
      option(value='7') 7
    p= 'Color: ' + car.color
    p= 'Is Rented: ' + car.isRented
    input(type='submit', value='rent')